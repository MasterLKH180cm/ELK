{
  "index_patterns": ["logs-default-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.codec": "best_compression",
      "index.refresh_interval": "30s"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_time||epoch_millis"
        },
        "message": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "log_level": {
          "type": "keyword"
        },
        "service_name": {
          "type": "keyword"
        },
        "correlation_id": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "host_name": {
          "type": "keyword"
        }
      }
    }
  }
}
